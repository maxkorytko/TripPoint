<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Name="DateTimeTextStyle" 
           TargetType="TextBlock"
           BasedOn="{StaticResource PhoneTextAccentStyle}">
        <Setter Property="FontSize" Value="23" />
    </Style>
    
    <Style x:Name="DateTimeTextWithoutMarginStyle"
           TargetType="TextBlock"
           BasedOn="{StaticResource DateTimeTextStyle}">
        <Setter Property="Margin" Value="0,0,0,0" />
    </Style>
    
    <Style x:Name="ListHeaderNormalStyle"
           TargetType="TextBlock"
           BasedOn="{StaticResource PhoneTextBlockBase}">
        <Setter Property="FontSize" Value="35" />
    </Style>

    <Style x:Name="ListHeaderLargeStyle"
           TargetType="TextBlock"
           BasedOn="{StaticResource PhoneTextBlockBase}">
        <Setter Property="FontSize" Value="42" />
    </Style>

    <Style x:Name="HeaderNormalStyle"
           TargetType="TextBlock"
           BasedOn="{StaticResource PhoneTextBlockBase}">
        <Setter Property="FontSize" Value="44" />
    </Style>
    
    <Style x:Name="HeaderSmallStyle"
           TargetType="TextBlock"
           BasedOn="{StaticResource PhoneTextBlockBase}">
        <Setter Property="FontSize" Value="36" />
    </Style>

</ResourceDictionary>
